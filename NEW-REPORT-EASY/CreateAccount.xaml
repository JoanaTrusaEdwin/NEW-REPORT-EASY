<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NEW_REPORT_EASY.CreateAccount"
             Title="CreateAccount">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        
        <Entry x:Name="Email" Placeholder="Email" />
        <Entry x:Name="Username" Placeholder="Username" />
        <Entry x:Name="FullName" Placeholder="Full Name (according to IC)" />
        <Entry x:Name="PhoneNumber" Placeholder="Phone Number (optional)" />
        <Entry x:Name="PasswordHash" Placeholder="Password" />
        <Entry x:Name="IdentificationNumber" Placeholder="IC (with a -, example: xxxxxx-xx-xxxx)" />
       
        <Button Text="Create Account" Clicked="OnCreateAccountClicked" HorizontalOptions="Center" TextColor="Black"  BackgroundColor="#FFD700" />

        <Label Text="Terms and conditions: ..." FontSize="12" TextColor="Gray" />
    </VerticalStackLayout>
</ContentPage>