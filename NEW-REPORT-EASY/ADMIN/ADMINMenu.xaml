             x:Class="NEW_REPORT_EASY.ADMIN.ADMINMenu"
             Title="ADMINMenu">
  

    <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Center">
        <Button Text="My Profile" Clicked="OnMyProfileClicked" FontFamily="Roboto-Bold" BackgroundColor="#FFD700" TextColor="Black" FontAttributes="Bold" WidthRequest="150" Margin="10"/>

        <Button Text="Reports" Clicked="OnReportsClicked" FontFamily="Roboto-Bold" BackgroundColor="#FFD700" TextColor="Black" FontAttributes="Bold" WidthRequest="150" Margin="10"/>

        <Button Text="Reviewed Reports" Clicked="OnReviewedReportsClicked" FontFamily="Roboto-Bold" BackgroundColor="#FFD700" TextColor="Black" FontAttributes="Bold" WidthRequest="150" Margin="10"/>

        <Button Text="Safety Resources" Clicked="OnSafetyResourcesClicked" FontFamily="Roboto-Bold" BackgroundColor="#FFD700" TextColor="Black" FontAttributes="Bold" WidthRequest="150" Margin="10"/>

        <Button Text="User Feedback" Clicked="OnUserFeedbackClicked" FontFamily="Roboto-Bold" BackgroundColor="#FFD700" TextColor="Black" FontAttributes="Bold" WidthRequest="150" Margin="10"/>


    </FlexLayout>
