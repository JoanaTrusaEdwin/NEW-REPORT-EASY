<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NEW_REPORT_EASY.ADMIN.ADMINLogin"
             Title="ADMINLogin">
 
    <VerticalStackLayout>
        

        <Entry x:Name="StaffNumber" FontFamily="Roboto" Placeholder="Please obtain your staff number from your department" />
        <Entry x:Name="Username" FontFamily="Roboto" Placeholder="Username" />
        <Entry x:Name="Password" FontFamily="Roboto" Placeholder="Password" />
    


        <!--TEMPORARY ALERT: FOR CREATE ACCOUNT BUTTON, PLS CHANGE ITS DIRECTORY SO IT ONLY VIEWS THE MENU ONCE ACCOUNT IS VERIFIED -->
        <Button Text="Log In" Clicked="OnLogInClicked" HorizontalOptions="Center" TextColor="Black" FontAttributes="Bold" BackgroundColor="#FFD700" />

        <Button Text="Terms and Conditions"  FontFamily="Roboto-Bold" BackgroundColor="White" TextColor="Black" WidthRequest="250" Margin="10"/>
    </VerticalStackLayout>
</ContentPage>